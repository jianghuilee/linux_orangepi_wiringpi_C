LcdWriteCom(0);//ÉèÖÃÏÔÊ¾Ä£Ê½
LcdWriteCom(1);//¿ªÏÔÊ¾²»ÏÔÊ¾¹â±ê£¬¹â±ê²»ÉÁË¸
LcdWriteCom(2);//Ð´Ò»¸öÊý¾Ý£¬Ö¸Õë¼Ó1
LcdWriteCom(3);//ÇåÆÁ
LcdWriteCom(4);//ÉèÖÃÊý¾ÝÖ¸ÕëÆðµã¡£
}
void LcdWriteCom(int comi){//Ð´ÈëÃüÁî
	
int i;
  for(i=0;i<8;i++)
    {
    cmddata[i]=inicmd[comi][i];
    digitalWrite(data_chip[i],cmddata[i]);
    }
	delay(10);
    digitalWrite(LCDE,1);
	delay(10);
    digitalWrite(LCDE,0);
}
void LcdWriteData(int datai){//Ð´ÈëÊý¾Ý
    digitalWrite(RS,1);
    digitalWrite(RW,0);
 int i;
  for(i=0;i<8;i++)
    {
    cmddata[i]=data[datai][i];
    digitalWrite(data_chip[i],cmddata[i]);
    }
	delay(10);
    digitalWrite(LCDE,1);
	delay(10);
    digitalWrite(LCDE,0);
}




